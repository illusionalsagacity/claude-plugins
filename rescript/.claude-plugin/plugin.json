{
  "name": "rescript-lsp",
  "description": "Rescript Language Server Plugin",
  "version": "0.2.0",
  "author": {
    "name": "rob <1661092+illusionalsagacity@users.noreply.github.com>"
  },
  "agents": ["../agents/rescript-bindings-writer.md"],
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '.tool_input.file_path | select(test(\"\\.(res|resi)$\"))' | xargs -r npx rescript format"
          }
        ]
      }
    ]
  }
}
